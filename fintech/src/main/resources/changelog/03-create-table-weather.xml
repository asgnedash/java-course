<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="create-weather" author="asgnedash">
        <createTable tableName="weathers">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="city_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="weather_type_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="temperature" type="FLOAT">
                <constraints nullable="false"/>
            </column>
            <column name="timestamp" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="weathers"
                                 baseColumnNames="city_id"
                                 constraintName="fk_city"
                                 referencedTableName="cities"
                                 referencedColumnNames="id"
                                 onDelete="SET NULL"/>

        <addForeignKeyConstraint baseTableName="weathers"
                                 baseColumnNames="weather_type_id"
                                 constraintName="fk_weather_type"
                                 referencedTableName="weather_types"
                                 referencedColumnNames="id"
                                 onDelete="SET NULL"/>
    </changeSet>
</databaseChangeLog>
